<%= simple_form_for(@link) do |f| %>
  <%= f.input  :title  %>
  <%= f.input  :lnk  %>
  <%= f.input  :text  %>
  <%= f.input  :date_published %>
  <%= f.input :media_outlet_id,:collection => MediaOutlet.all,:label_method => :title,:value_method => :id,:label => "Media Outlet" ,:include_blank => false %>
  <!-- f.input :image, as: :file -->
  <%= f.hidden_field :timeline_id, :value => @timeline_id %>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>