<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<div class="col-md-4">
  		<%= image_tag(@timeline.img, size: "100") %>
  		</div>
  	</div>
	<div class="row">
		<div class="col-md-4">
			<strong>Title:</strong>
		</div>
		<div class="col-md-8">
			<%= @timeline.title %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<strong>Descr:</strong>
		</div>
		<div class="col-md-8">
			<%= @timeline.descr %>
		</div>
	</div>
	<div class="row">
		<!-- Modal -->
		<div class="modal fade" id="link-form-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel">New/Edit link</h4>
		      </div>
		      <div class="modal-body">
				<div id="link-form"></div>
		      </div>
		    </div>
		  </div>
		</div>
		<div class="col-md-4">
			<%= link_to('New Link', { controller: "links", action: "new", timeline_id: @timeline.id }, remote: true, class: 'btn btn-default', "data-toggle" => "modal", "data-target" => "#link-form-modal" )%>
		</div>
	</div>
	<div id="links">
		<%= render partial: "links/links_all" %>
	</div>
	<div class="row">
		<%= link_to 'Edit', edit_timeline_path(@timeline), class: 'btn btn-default' %>
		<%= link_to 'Home', timelines_path, class: 'btn btn-default' %>
	</div>
</div>